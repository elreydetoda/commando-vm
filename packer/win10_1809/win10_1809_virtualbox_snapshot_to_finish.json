{
  "_comment_space": "Requires that you have made a snapshot of the VM you intend to modify.",
  "variables": {
      "profile_file_name":"profile.json",
      "install_dir": "C:/Users/vagrant/Desktop/CommandoVM"
  },
  "builders": [
    {
      "attach_snapshot": "Snapshot_1",
      "communicator": "winrm",
      "force_delete_snapshot": true,
      "keep_registered": true,
      "shutdown_timeout": "30m",
      "skip_export": true,
      "target_snapshot": "commando-snapshot",
      "type": "virtualbox-vm",
      "vm_name": "Windows_10_1809_x64_commando",
      "guest_additions_mode": "disable",
      "winrm_password": "vagrant",
      "winrm_username": "vagrant",
      "headless": "true",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\""
    }
  ],
  "provisioners": [
    {
      "inline": "mkdir {{ user `install_dir` }}",
      "type": "powershell"
    },
    {
      "destination": "{{ user `install_dir` }}/",
      "sources": [
        "../../install.ps1",
        "../../packages.csv",
        "../../profile.json",
        "../../commandovm.win10.config.fireeye",
        "../../commandovm.win10.installer.fireeye",
        "../../commandovm.win10.preconfig.fireeye",
        "../../Profiles",
        "scripts/start.ps1"
      ],
      "type": "file"
    },
    {
      "inline": [
        "Unblock-File {{ user `install_dir` }}/install.ps1",
        "Unblock-File {{ user `install_dir` }}/start.ps1"
      ],
      "type": "powershell"
    },
    {
      "type": "breakpoint",
      "note": "Go and (Right click ) run the start.ps1 inside the vm and When CommandoVM is finished come back and hit Enter here."
    }
  ]
}
